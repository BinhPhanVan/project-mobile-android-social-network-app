<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.midterm.cloneinstagram">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".PushNotify.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/hashtag_100px"
        android:label="@string/app_name"
        android:roundIcon="@drawable/hashtag_100px"
        android:supportsRtl="true"
        android:theme="@style/Theme.CloneInstagram">
        <activity
            android:name=".seeImage"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".seeVideo"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HomeChatActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ForgotPassWordActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NewStory"
            android:exported="false" />
        <activity
            android:name=".ProfileUserActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CommentActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DetailPost"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StoryActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UpdateInformationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LaunchScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <service
            android:name=".PushNotify.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>